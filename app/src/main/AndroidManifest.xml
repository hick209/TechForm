<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="finep.inovatec">

	<uses-permission android:name="android.permission.INTERNET"/>

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:fullBackupContent="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		tools:ignore="UnusedAttribute">

		<activity
			android:name=".group.list.GroupListActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".group.details.GroupDetailsActivity"
			android:parentActivityName=".group.list.GroupListActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".group.list.GroupListActivity"/>
		</activity>

		<activity
			android:name=".question.SectionQuestionsActivity"
			android:parentActivityName=".group.details.GroupDetailsActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".group.details.GroupDetailsActivity"/>
		</activity>

	</application>

</manifest>
